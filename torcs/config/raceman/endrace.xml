<!DOCTYPE params SYSTEM "../libs/tgf/params.dtd">

<params name="endurance race" type="param" mode="mw">

  <section name="Header">
    <attstr name="name" val="Endurance Race"/>
    <attstr name="description" val="Endurance Race"/>
    <attnum name="priority" val="21"/>
    <attstr name="menu image" val="data/img/splash-dtm.png"/>
    <attstr name="run image" val="data/img/splash-run-practice.png"/>
    <attstr name="start image" val="data/img/splash-dtm.png"/>
  </section>

  <section name="Tracks">
    <attnum name="maximum number" val="1"/>

    <section name="1">
      <attstr name="name" val="e-track-6"/>
      <attstr name="category" val="road"/>
    </section>
  </section>

  <section name="Races">
    <section name="1">
      <attstr name="name" val="Qualifications"/>
    </section>

    <section name="2">
      <attstr name="name" val="Race"/>
    </section>
  </section>

  <section name="Qualifications">
    <attnum name="laps" val="3"/>
    <attstr name="type" val="qualifications"/>
    <attstr name="starting order" val="drivers list"/>
    <attstr name="display mode" val="results only"/>
    <attstr name="restart" val="no"/>
    <attstr name="display results" val="yes"/>
    <attstr name="must complete" val="yes"/>

    <section name="Starting Grid">
      <attnum name="rows" val="1.000000"/>
      <attnum name="distance to start" val="100.000000"/>
      <attnum name="distance between columns" val="20.000000"/>
      <attnum name="offset within a column" val="10.000000"/>
      <attnum name="initial speed" val="0.000000"/>
      <attnum name="initial height" val="0.200000"/>
    </section>
  </section>

  <section name="Race">
    <attnum name="distance" val="500" unit="km"/>
    <attstr name="type" val="race"/>
    <attstr name="starting order" val="last race"/>
    <attstr name="restart" val="no"/>
    <attnum name="maximum drivers" val="50"/>
    <attstr name="splash menu" val="yes"/>

    <section name="Starting Grid">
      <attnum name="rows" val="2.000000"/>
      <attnum name="distance to start" val="25.000000"/>
      <attnum name="distance between columns" val="30.000000"/>
      <attnum name="offset within a column" val="10.000000"/>
      <attnum name="initial speed" val="0.000000"/>
      <attnum name="initial height" val="0.200000"/>
    </section>

    <section name="Points">
      <section name="1">
	<attnum name="points" val="10"/>
      </section>
      <section name="2">
	<attnum name="points" val="8"/>
      </section>
      <section name="3">
	<attnum name="points" val="6"/>
      </section>
      <section name="4">
	<attnum name="points" val="5"/>
      </section>
      <section name="5">
	<attnum name="points" val="4"/>
      </section>
      <section name="6">
	<attnum name="points" val="3"/>
      </section>
      <section name="7">
	<attnum name="points" val="2"/>
      </section>
      <section name="8">
	<attnum name="points" val="1"/>
      </section>
    </section>
  </section>

  <section name="Drivers">
    <attnum name="maximum number" val="50"/>
    <attstr name="focused module" val="human"/>
    <attnum name="focused idx" val="5.000000"/>

    <section name="1">
      <attnum name="idx" val="5"/>
      <attstr name="module" val="berniw"/>
    </section>

    <section name="2">
      <attnum name="idx" val="6"/>
      <attstr name="module" val="olethros"/>
    </section>

    <section name="3">
      <attnum name="idx" val="7"/>
      <attstr name="module" val="lliaw"/>
    </section>

    <section name="4">
      <attnum name="idx" val="1"/>
      <attstr name="module" val="human"/>
    </section>

    <section name="5">
      <attnum name="idx" val="3"/>
      <attstr name="module" val="tita"/>
    </section>
  </section>

  <section name="Configuration">

    <section name="1">
      <attstr name="type" val="track select"/>
    </section>

    <section name="2">
      <attstr name="type" val="drivers select"/>
    </section>
  </section>

</params>
